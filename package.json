{
  "name": "ty-levels",
  "displayName": "ty-levels",
  "description": "Avara level editing enhancements for VS Code.",
  "publisher": "skedastik",
  "repository": "https://github.com/skedastik/vscode-ty-levels",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addEtags",
        "title": "Add Etags"
      },
      {
        "command": "extension.removeEtags",
        "title": "Remove Etags"
      },
      {
        "command": "extension.regenerateEtags",
        "title": "Regenerate Etags"
      },
      {
        "command": "extension.pasteWithNewEtags",
        "title": "Paste with New Etags"
      },
      {
        "command": "extension.toggleAutoTag",
        "title": "Toggle Auto Tag"
      },
      {
        "command": "extension.findEtag",
        "title": "Find Etag"
      },
      {
        "command": "extension.translateX",
        "title": "Translate Elements Along X Axis"
      },
      {
        "command": "extension.translateZ",
        "title": "Translate Elements Along Z Axis"
      },
      {
        "command": "extension.translateY",
        "title": "Translate Elements Along Y Axis"
      },
      {
        "command": "extension.mirrorX",
        "title": "Mirror Elements Across X Axis"
      },
      {
        "command": "extension.mirrorZ",
        "title": "Mirror Elements Across Z Axis"
      },
      {
        "command": "extension.mirrorY",
        "title": "Mirror Elements Across Y Axis"
      }
    ],
    "keybindings": [
      {
        "command": "extension.pasteWithNewEtags",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "editorTextFocus && resourceExtname == .alf"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^19.0.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "mathjs": "^14.3.0"
  }
}
